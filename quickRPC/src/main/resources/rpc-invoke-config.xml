<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="netty.rpc.core"/>
    <context:property-placeholder location="classpath:rpc-server.properties"/>

    <bean id="rpcbean" class="netty.rpc.core.common.MessageKeyVal">
        <property name="messageKeyVal">
            <map>
                <entry key="netty.rpc.servicebean.Calculate">
                    <ref bean="calc"/>
                </entry>
            </map>
        </property>
    </bean>
    <bean id="calc" class="netty.rpc.servicebean.CalculateImpl"/>
    <bean id="rpcServer" class="netty.rpc.core.server.MessageRecvExecutor">
        <constructor-arg index="0" value="${rpc.server.addr}"/>
        <constructor-arg index="1" value="KRYSERIALIZE"/>
    </bean>
</beans>